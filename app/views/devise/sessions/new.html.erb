<% provide(:title, "Log in") %>
<% provide(:desc, "Log in and get started doing what you need to do") %>

<section class="form-section">
  <div class="form-container">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <h2 class="form-title">Log in</h2>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-password'%>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class:"form-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>  
</section>