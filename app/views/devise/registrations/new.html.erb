<% provide(:title, "Sign up") %>
<% provide(:desc, "Sign up and get started doing what you need to do") %>

<section class="form-section">
  <div class="form-container">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <h2 class="form-title">Sign Up</h2>
      
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-text" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-text" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"form-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-password" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class:"form-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>  
</section>