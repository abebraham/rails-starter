<!-- Devise Alerts -->
<% if notice or alert %>
<% color = alert ? "alert bg-red border-red-light" : "notice bg-blue border-blue-light" %>
<div class="relative container">
  <div class="absolute w-full pin-t z-50">
    <p class="devise-notice <%= color %>">
    	<%= notice %><%= alert %>
    </p>
  </div>
</div>
<% end %>