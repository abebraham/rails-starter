<!-- Devise Alerts -->
<% if notice or alert %>
<div class="relative container">
  <div class="absolute w-full pin-t z-50">
    <p class="notice bg-blue border-l-8 border-blue-light text-white h-12 flex items-center justify-center"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
</div>
<% end %>